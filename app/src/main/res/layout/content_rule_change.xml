<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activities.RuleChangeActivity"
    tools:showIn="@layout/app_bar_rule_change">

    <ImageButton
        android:id="@+id/mResponseYesButton"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorButton"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:src="@drawable/thumb_up"
        android:tint="@android:color/holo_green_dark" />

    <ImageButton
        android:id="@+id/responseNoButton"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/colorButton"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:src="@drawable/thumb_down"
        android:tint="@android:color/holo_red_dark" />

    <FrameLayout
        android:id="@+id/container_rule_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mResponseYesButton" />

</RelativeLayout>