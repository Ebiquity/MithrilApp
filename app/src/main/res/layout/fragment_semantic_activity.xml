<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_permissions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_margin"
    android:layout_marginEnd="@dimen/card_view_margin"
    android:layout_marginStart="@dimen/card_view_margin"
    android:layout_marginTop="@dimen/card_view_margin"
    android:elevation="@dimen/card_view_elevation"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/protectionLvlImageView"-->
            <!--android:layout_width="60sp"-->
            <!--android:layout_height="60sp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:contentDescription="@string/app_icon_description"-->
            <!--android:paddingEnd="5dp"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="5dp"-->
            <!--android:paddingStart="5dp"-->
            <!--android:src="@drawable/android" />-->

        <TextView
            android:id="@+id/semanticActivityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingEnd="@dimen/card_view_margin"
            android:paddingLeft="@dimen/card_view_margin"
            android:paddingRight="@dimen/card_view_margin"
            android:paddingStart="@dimen/card_view_margin"
            android:text="@string/app_name_placeholder_text"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/semanticActivityDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/semanticActivityLabel"
            android:paddingEnd="@dimen/card_view_margin"
            android:paddingLeft="@dimen/card_view_margin"
            android:paddingRight="@dimen/card_view_margin"
            android:paddingStart="@dimen/card_view_margin"
            android:text="@string/app_version_placeholder_text"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"
            android:textColor="@color/colorSecondaryText"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/semanticActivitySelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:enabled="false" />
    </RelativeLayout>
</android.support.v7.widget.CardView>