<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    tools:context=".ui.activities.UserAgreementActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <RelativeLayout
        android:id="@+id/fullscreen_user_agreement_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fullscreen_user_agreement_project_details_text_CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_view_margin"
            android:layout_marginEnd="@dimen/card_view_margin"
            android:layout_marginStart="@dimen/card_view_margin"
            android:layout_marginTop="@dimen/top_margin_fullscreen"
            android:elevation="@dimen/card_view_margin"
            card_view:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/fullscreen_user_agreement_consent_Header_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/project_details_txt_for_fullscreen"
                android:textAlignment="textStart"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fullscreen_user_agreement_please_read_text_CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullscreen_user_agreement_project_details_text_CardView"
            android:layout_marginBottom="@dimen/card_view_margin"
            android:layout_marginEnd="@dimen/card_view_margin"
            android:layout_marginStart="@dimen/card_view_margin"
            android:layout_marginTop="@dimen/card_view_margin"
            android:elevation="@dimen/card_view_margin"
            card_view:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/fullscreen_user_agreement_please_read_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/fullscreen_user_agreement_consent_text"
                android:textAlignment="textStart"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fullscreen_user_agreement_consent_text_CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullscreen_user_agreement_please_read_text_CardView"
            android:layout_marginBottom="@dimen/card_view_margin"
            android:layout_marginEnd="@dimen/card_view_margin"
            android:layout_marginStart="@dimen/card_view_margin"
            android:layout_marginTop="@dimen/card_view_margin"
            android:elevation="@dimen/card_view_margin"
            card_view:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/fullscreen_user_agreement_consent_text_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/user_agreement_information_text"
                android:textAlignment="textStart"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>

        <!--<TextView-->
        <!--android:id="@+id/fullscreen_user_agreement_consent_TextView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:keepScreenOn="true"-->
        <!--android:text="@string/fullscreen_user_agreement_consent_text"-->
        <!--android:textColor="@color/whitesmoke"-->
        <!--android:textSize="25sp"-->
        <!--android:textStyle="bold" />-->
    </RelativeLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/fullscreen_user_agreement_Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fullscreen_user_agreement_button_label"
                android:textSize="20sp"
                android:theme="@style/AppTheme.Button" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
