<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:enabled="true"
        android:title="@string/pref_header_location_context">
        <EditTextPreference
            android:defaultValue="@string/pref_header_home_location_summary"
            android:key="@string/pref_header_home_location_key"
            android:summary="@string/pref_header_home_location_summary"
            android:title="@string/pref_header_home_location_title" />
        <EditTextPreference
            android:defaultValue="@string/pref_header_work_location_summary"
            android:key="@string/pref_header_work_location_key"
            android:summary="@string/pref_header_work_location_summary"
            android:title="@string/pref_header_work_location_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:enabled="true"
        android:title="@string/pref_header_temporal_context">
        <EditTextPreference
            android:defaultValue="@string/pref_header_work_hours_summary"
            android:key="@string/pref_header_work_hours_key"
            android:summary="@string/pref_header_work_hours_summary"
            android:title="@string/pref_header_work_hours_title" />
        <EditTextPreference
            android:defaultValue="@string/pref_header_DND_hours_summary"
            android:key="@string/pref_header_DND_hours_key"
