<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.umbc.cs.ebiquity.mithril">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/short_app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/short_app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.AppSettingsActivity"
            android:label="@string/title_activity_app_settings"
            android:parentActivityName=".ui.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.umbc.cs.ebiquity.mithril.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".ui.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.umbc.cs.ebiquity.mithril.ui.activities.MainActivity" />
        </activity>

        <receiver
            android:name=".util.receivers.CommandBroadcastReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".util.receivers.AppInstallBroadcastReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".util.services.AppLaunchDetectionIntentService"
            android:exported="false" />

        <activity
            android:name=".ui.activities.ShowAppDetailActivity"
            android:label="@string/title_activity_show_app_detail"
            android:parentActivityName=".ui.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.umbc.cs.ebiquity.mithril.ui.activities.MainActivity" />
        </activity>
    </application>

</manifest>